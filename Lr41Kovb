import java.io.FileWriter;
import java.io.IOException;
import java.util.HashMap;
import java.util.Random;
import java.util.Scanner;

public class Lr41Kovb {
    private HashMap<String, Integer> keyValueMap;

    public Lr41Kovb() {
        keyValueMap = new HashMap<>();
    }

    public void addValue(String value, int key) {
        keyValueMap.put(value, key);
    }

    public void removeValue(String value) {
        if (keyValueMap.containsKey(value)) {
            keyValueMap.remove(value);
            System.out.println("Value '" + value + "' has been successfully removed.");
        } else {
            System.out.println("Value '" + value + "' does not exist in the map.");
        }
    }

    //оцей метод я вкрав)
    public String getValue(int key) {
        for (String k : keyValueMap.keySet()) {
            if (keyValueMap.get(k) == key) {
                return k;
            }
        }
        return null;
    }

    public void print() {
        System.out.println("HashMap:");
        for (String key : keyValueMap.keySet()) {
            System.out.println(key + ": " + keyValueMap.get(key));
        }
    }

    private boolean isValid(int key) {
        return key >= 0 && key < keyValueMap.size();
    }
    private static void printMenu() {
        System.out.println("Menu:");
        System.out.println("1. Add value");
        System.out.println("2. Remove value");
        System.out.println("3. Get value");
        System.out.println("4. Print HashMap");
        System.out.println("5. Exit");
    }

    public static void main(String[] args) throws IOException {
        Lr41Kovb keyValueStore = new Lr41Kovb();
        Scanner scanner = new Scanner(System.in);

        Random random = new Random(System.currentTimeMillis());
        keyValueStore.addValue("Kolya", random.nextInt(100));
        keyValueStore.addValue("Kovbasiuk", random.nextInt(100));
        keyValueStore.addValue("Kalynivka", random.nextInt(100));

        String value;
        int key;
        boolean exit = false;
        while (!exit) {
            printMenu();
            System.out.print("Enter your choice: ");
            int choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1:
                    System.out.print("Write value to add: ");
                    value = scanner.next();
                    key = random.nextInt(100);
                    keyValueStore.addValue(value, key);
                    break;
                case 2:
                    System.out.println("Write value to remove: ");
                    value = scanner.next();
                    keyValueStore.removeValue(value);
                    break;
                case 3:
                    System.out.println("Write which key you want to get the value for: ");
                    key = scanner.nextInt();
                    String retrievedValue = keyValueStore.getValue(key);
                    if (retrievedValue != null) {
                        System.out.println("Value for key " + key + ": " + retrievedValue);
                    } else {
                        System.out.println("Key " + key + " does not exist in the map.");
                    }
                    break;
                case 4:
                    keyValueStore.print();
                    break;
                case 5:
                    exit = true;
                    break;
                default:
                    System.out.println("Invalid choice. Please enter a number from 1 to 5.");
            }
        }
            FileWriter writer = new FileWriter("output.txt", true);
            writer.write("Initial data:\n");
            for (String k : keyValueStore.keyValueMap.keySet()) {
                writer.write(k + ": " + keyValueStore.getValue(keyValueStore.keyValueMap.get(k)) + "\n");
            }
            writer.close();
        scanner.close();
    }
}
